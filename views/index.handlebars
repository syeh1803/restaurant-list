<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">Search for Restaurants</h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="name or category..."
            aria-label="Restaurant Name..." value="" aria-describedby="search-button" />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            <a href="./restaurants/new"><button type="button" class="btn btn-success ml-2" data-toggle="tooltip"
                data-placement="top" title="Tooltip on top">Create</button></a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="col-sm-11 d-flex justify-content-end ml-5">
  <div class="btn-group">
    <button type="button" id="dropdown" class="btn btn-warning dropdown-toggle" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      Sort
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="/">A -> Z</a>
      <a class="dropdown-item" href="/">Z -> A</a>
      <a class="dropdown-item" href="/">By Category</a>
      <a class="dropdown-item" href="/">By Location</a>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-11 col-12 ml-4">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="./restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name_en}}" />
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name_en}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal mr-3">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <a class="btn btn-sm btn-info" type="submit" id="home-button"
                href="./restaurants/{{this._id}}/edit">Edit</a>
              <a class="btn btn-sm btn-secondary" type="submit" id="home-button"
                href="./restaurants/{{this._id}}">Detail</a>
              <form action="./restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;"><button
                  type="submit" class="btn btn-sm btn-danger">Delete</button></form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>